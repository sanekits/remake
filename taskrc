# taskrc for makeup/remake
# vim: filetype=sh :

# If someone does a raw "source taskrc", we ensure that $taskrc_dir gets defined anyway
[[ -z $taskrc_dir && -f ./taskrc ]]     && export taskrc_dir=$PWD


function tmake {
    #Help: help -- list targets; tmk -e -- edit shellkit-integration.mk
    case "$1" in
        -e|--edit)
            shift
            "vim" "${taskrc_dir}/shellkit-integration.mk" "$@"
            return
            ;;
        -h|--help)
            set -- help
            ;;
    esac
    command make -s taskrc_dir="${taskrc_dir}" PWD="${PWD}" -C "${taskrc_dir}" -f "${taskrc_dir}/shellkit-integration.mk" "$@"
}

if command which make &>/dev/null; then
    alias tmk="make -f ${taskrc_dir}/shellkit-integration.mk"
    if type -a _complete_alias &>/dev/null; then  # The bashics kit can install complete-alias
        complete -F _complete_alias tmk
    fi
else
    alias tmk='echo ERROR: "make" not found. >&2'
fi

